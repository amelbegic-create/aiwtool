generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- ENUMS ---
enum Role {
  SYSTEM_ARCHITECT
  SUPER_ADMIN
  ADMIN
  MANAGER
  CREW
}

enum PDSStatus {
  DRAFT
  OPEN
  SUBMITTED
  COMPLETED
  ARCHIVED
}

// --- USERS & AUTH ---
model User {
  id                  String    @id @default(cuid())
  name                String?
  email               String?   @unique
  password            String?
  role                Role      @default(CREW)
  department          String?   @default("RL")
  isActive            Boolean   @default(true)
  image               String?
  lastSeen            DateTime? @default(now())
  permissions         String[]  @default([])
  vacationEntitlement Int       @default(20)
  vacationCarryover   Int       @default(0)

  restaurants         RestaurantUser[]
  evaluations         EvaluationSubmission[]
  vacations           VacationRequest[]
  pdsList             PDS[]
  accounts            Account[]
  sessions            Session[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- PDS ---
model PDSTemplate {
  id        String   @id @default(cuid())
  year      Int      @unique
  goals     Json
  scale     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PDS {
  id                String    @id @default(cuid())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  userId            String
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  managerId         String
  year              Int
  templateId        String?
  goals             Json
  scale             Json
  employeeComment   String?   @db.Text
  managerComment    String?   @db.Text
  employeeSignature String?   @db.Text
  managerSignature  String?   @db.Text
  totalScore        Int       @default(0)
  status            PDSStatus @default(DRAFT)

  @@unique([userId, year])
}

// --- RESTAURANTS ---
model Restaurant {
  id                  String               @id @default(cuid())
  code                String               @unique
  name                String?
  city                String?
  address             String?
  isActive            Boolean              @default(true)
  openingHours        Json?                @default("{}")
  users               RestaurantUser[]
  rules               RuleRestaurant[]
  evaluations         EvaluationSubmission[]
  blockedDays         BlockedDay[]
  productivityReports ProductivityReport[]
  laborReports        LaborReport[]
  vacationRequests    VacationRequest[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model RestaurantUser {
  id           String     @id @default(cuid())
  userId       String
  restaurantId String
  isPrimary    Boolean    @default(false)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
}

// --- TOOLS ---
model ProductivityReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  date         String     
  data         Json       @default("{}")
  targetProd   Float?     @default(120)
  netCoeff     Float?     @default(1.17)
  hourlyData   Json?
  
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([restaurantId, date])
}

model LaborPlan {
  id         String   @id @default(cuid())
  year       Int
  month      Int
  restaurant String
  data       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([year, month, restaurant])
}

model LaborReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  month        Int
  year         Int
  daysData     Json
  hourlyWage   Float      @default(11.80)
  budgetSales  Float      @default(0)
  budgetCost   Float      @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([restaurantId, month, year])
}

model VacationRequest {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  start        String
  end          String
  days         Int
  status       String      @default("PENDING")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model BlockedDay {
  id           String     @id @default(cuid())
  date         String
  reason       String?
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
}

model EvaluationTemplate {
  id          String                 @id @default(cuid())
  title       String
  criteria    Json
  isActive    Boolean                @default(true)
  createdAt   DateTime               @default(now())
  submissions EvaluationSubmission[]
}

model EvaluationSubmission {
  id           String             @id @default(cuid())
  templateId   String
  template     EvaluationTemplate @relation(fields: [templateId], references: [id])
  restaurantId String
  restaurant   Restaurant         @relation(fields: [restaurantId], references: [id])
  userId       String
  user         User               @relation(fields: [userId], references: [id])
  answers      Json
  totalScore   Int
  createdAt    DateTime           @default(now())
}

model Rule {
  id          String           @id @default(cuid())
  title       String
  slug        String           @unique
  content     String
  category    String
  isGlobal    Boolean          @default(true)
  published   Boolean          @default(false)
  authorId    String
  restaurants RuleRestaurant[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

model RuleRestaurant {
  id           String     @id @default(cuid())
  ruleId       String
  restaurantId String
  rule         Rule       @relation(fields: [ruleId], references: [id])
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@unique([ruleId, restaurantId])
}