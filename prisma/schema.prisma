generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Za Neon/pool: u DATABASE_URL dodaj ?connection_limit=5 da ne iscrpiš pool (npr. Neon limit 10)
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")    // Direct connection (OBAVEZNO za 'prisma db push')
}

// --- ENUMS ---
enum Role {
  SYSTEM_ARCHITECT
  SUPER_ADMIN
  ADMIN
  MANAGER
  SHIFT_LEADER
  CREW
}

enum PDSStatus {
  DRAFT
  IN_PROGRESS
  OPEN
  SUBMITTED
  RETURNED
  APPROVED
  COMPLETED
  ARCHIVED
}

// ENUMI ZA PRAVILA
enum RulePriority {
  INFORMATION
  MANDATORY
  URGENT
}

enum RuleStatus {
  ACTIVE
  ARCHIVED
  DRAFT
}

// --- BONUS TOOL ENUMS ---
enum BonusCycleStatus {
  DRAFT      // Konfiguracija u toku
  ACTIVE     // Trenutni obračunski ciklus
  CLOSED     // Zaključan, ali vidljiv za izvještaje
  ARCHIVED   // Arhiviran, read-only
}

enum BonusFactorMode {
  MULTIPLY
  AVERAGE
}

// --- DEPARTMENTS (Odjeli) ---
model Department {
  id           String   @id @default(cuid())
  name         String
  color        String   @default("#6b7280") // HEX npr. #ff0000
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: SetNull)

  users        User[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([restaurantId])
}

// --- USERS & AUTH ---
model User {
  id                  String    @id @default(cuid())
  name                String?
  email               String?   @unique
  password            String?
  role                Role      @default(CREW)
  departmentId        String?
  department          Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  isActive            Boolean   @default(true)
  image               String?
  lastSeen            DateTime? @default(now())
  permissions         String[]  @default([])
  vacationEntitlement Int       @default(20)
  vacationCarryover   Int       @default(0)

  // Nadređeni (za Mein Team i odobravanje godišnjeg)
  supervisorId        String?
  supervisor          User?     @relation("UserSupervisor", fields: [supervisorId], references: [id], onDelete: SetNull)
  subordinates        User[]    @relation("UserSupervisor")

  // Godišnji po godinama (VacationAllowance = dinamička lista godina)
  vacationAllowances  VacationAllowance[]

  restaurants              RestaurantUser[]
  evaluations         EvaluationSubmission[]
  vacations           VacationRequest[]      // zahtjevi koje je korisnik kreirao
  supervisedVacations VacationRequest[] @relation("VacationSupervisor") // ✅ NOVO: zahtjevi koji dolaze ovom korisniku na odobrenje

  pdsList             PDS[]
  accounts            Account[]
  sessions            Session[]

  // RELACIJE ZA PRAVILA
  readRules           RuleReadReceipt[]

  // ✅ NOVO: state snapshotovi za alate (Vercel Blob pointeri)
  toolStates          ToolState[]

  // BONUS TOOL: zapisi po bonus ciklusu
  bonusEntries        BonusEntry[]

  dashboardChangelogUpdates DashboardChangelog[]

  ideas                Idea[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

// Ideenbox: Vorschläge von Mitarbeitern an System Architect / AL
model Idea {
  id        String   @id @default(cuid())
  text      String   @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isRead])
}

model VacationAllowance {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  year            Int
  days            Int      @default(0)
  carriedOverDays Int      @default(0) // Preneseno iz prethodne godine

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([userId, year])
  @@index([year])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
}

// Ein Eintrag: Aktuelle Änderungen auf dem Dashboard (nur SYSTEM_ARCHITECT darf bearbeiten).
model DashboardChangelog {
  id          String    @id @default(cuid())
  content     String    @db.Text
  updatedAt   DateTime  @updatedAt
  updatedById String?
  updatedBy   User?     @relation(fields: [updatedById], references: [id], onDelete: SetNull)

  @@map("dashboard_changelog")
}

// --- ROLE PERMISSION PRESETS ---
// Omogućava "preset" permisije po roli (npr. CREW), koje se automatski dodeljuju pri kreiranju korisnika.
// Admin može menjati ove preset-e kroz UI.
model RolePermissionPreset {
  id             String   @id @default(cuid())
  role           Role     @unique
  permissionKeys String[] @default([])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- PDS ---
model PDSTemplate {
  id           String       @id @default(cuid())
  title        String       // Naziv PDS obrasca (npr. "PDS 2025")
  year         Int
  isGlobal     Boolean      @default(false) // true = svi restorani
  isActive     Boolean      @default(true)
  goals        Json         // Pitanja/ciljevi (PDSGoal[])
  scale        Json         // Skala ocjenjivanja (PDSScaleLevel[])
  restaurants  Restaurant[] // Ciljani restorani (prazno ako isGlobal)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@index([year])
}

model PDS {
  id                 String      @id @default(cuid())
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  userId             String
  user               User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurantId       String?
  restaurant         Restaurant? @relation(fields: [restaurantId], references: [id])
  managerId          String
  year               Int
  templateId         String?
  goals              Json
  scale              Json
  employeeComment    String?     @db.Text
  managerComment     String?     @db.Text
  employeeSignature  String?     @db.Text
  managerSignature   String?     @db.Text
  totalScore         Int         @default(0)
  finalGrade         String?
  status             PDSStatus   @default(DRAFT)

  @@unique([userId, year])
}

// --- RESTAURANTS ---
model Restaurant {
  id                  String               @id @default(cuid())
  code                String               @unique
  name                String?
  city                String?
  address             String?
  isActive            Boolean              @default(true)
  openingHours        Json?                @default("{}")
  users               RestaurantUser[]
  departments         Department[]

  // Relacija na pravila
  rules               RuleRestaurant[]

  evaluations         EvaluationSubmission[]
  blockedDays         BlockedDay[]
  productivityReports ProductivityReport[]
  laborReports        LaborReport[]
  vacationRequests    VacationRequest[]
  pdsTemplates        PDSTemplate[] // Many-to-many: PDS obrasci koji ciljaju ovaj restoran
  pdsList             PDS[]

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model RestaurantUser {
  id           String     @id @default(cuid())
  userId       String
  restaurantId String
  isPrimary    Boolean    @default(false)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
}

// --- TOOLS ---
model ProductivityReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  date         String
  data         Json       @default("{}")
  targetProd   Float?     @default(120)
  netCoeff     Float?     @default(1.17)
  hourlyData   Json?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([restaurantId, date])
}

model LaborPlan {
  id         String   @id @default(cuid())
  year       Int
  month      Int
  restaurant String
  data       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([year, month, restaurant])
}

model LaborReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  month        Int
  year         Int
  daysData     Json
  hourlyWage   Float      @default(11.80)
  budgetSales  Float      @default(0)
  budgetCost   Float      @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

// Globalni praznici (Feiertage) – jedinstveno na nivou sajta, koriste Labor Planner i ostali moduli
model Holiday {
  id        String   @id @default(cuid())
  day       Int      // 1–31
  month     Int      // 1–12
  label     String?  // npr. "Neujahr"
  year      Int?     // null = svake godine; inače samo za tu godinu
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VacationRequest {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ✅ NOVO: kome ide odobrenje (snapshot nadređeni u momentu slanja)
  supervisorId String?
  supervisor   User?       @relation("VacationSupervisor", fields: [supervisorId], references: [id], onDelete: SetNull)

  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  start        String
  end          String
  days         Int
  status       String      @default("PENDING")
  note         String?     // opcionalna napomena (npr. za self-service admina)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@index([start])
  @@index([userId, start])
}

model BlockedDay {
  id           String     @id @default(cuid())
  date         String
  reason       String?
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
}

model EvaluationTemplate {
  id          String                 @id @default(cuid())
  title       String
  criteria    Json
  isActive    Boolean                @default(true)
  createdAt   DateTime               @default(now())
  submissions EvaluationSubmission[]
}

model EvaluationSubmission {
  id           String             @id @default(cuid())
  templateId   String
  template     EvaluationTemplate @relation(fields: [templateId], references: [id])
  restaurantId String
  restaurant   Restaurant         @relation(fields: [restaurantId], references: [id])
  userId       String
  user         User               @relation(fields: [userId], references: [id])
  answers      Json
  totalScore   Int
  createdAt    DateTime           @default(now())
}

// --- MODULE: PRAVILA (NOVO - CMS VERZIJA) ---

// 1. Kategorije
model RuleCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  rules     Rule[]
  createdAt DateTime @default(now())
}

// 2. Slike (Galerija)
model RuleImage {
  id        String   @id @default(cuid())
  url       String
  ruleId    String
  rule      Rule     @relation(fields: [ruleId], references: [id], onDelete: Cascade)
}

// 3. Glavni Rule model
model Rule {
  id            String           @id @default(cuid())
  title         String
  content       String?          @db.Text

  // Relacija na kategoriju
  categoryId    String
  category      RuleCategory     @relation(fields: [categoryId], references: [id])

  priority      RulePriority     @default(INFORMATION)

  // Status: Aktivan/Neaktivan
  isActive      Boolean          @default(true)
  status        RuleStatus       @default(ACTIVE) // Zadržano radi kompatibilnosti

  // Media
  videoUrl      String?

  // OVO JE KLJUČNO: Niz stringova za podršku više PDF-ova
  pdfUrls       String[]         @default([])

  imageUrl      String?          // Opcionalno za thumbnail

  // Relacija na slike (One-to-Many)
  images        RuleImage[]

  // Vidljivost
  isGlobal      Boolean          @default(true)

  authorId      String

  // Relacije
  restaurants   RuleRestaurant[]
  readReceipts  RuleReadReceipt[]

  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([categoryId])
  @@index([isActive])
}

model RuleRestaurant {
  id           String     @id @default(cuid())
  ruleId       String
  restaurantId String
  rule         Rule       @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([ruleId, restaurantId])
}

model RuleReadReceipt {
  id        String   @id @default(cuid())
  ruleId    String
  rule      Rule     @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  readAt    DateTime @default(now())

  @@unique([ruleId, userId])
}

//
// ✅ NOVO: TOOL STATE (Vercel Blob pointer per user + toolKey)
//
model ToolState {
  id        String   @id @default(cuid())
  toolKey   String
  blobUrl   String

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([userId, toolKey])
  @@index([toolKey])
}

// Moduli označeni kao "dodani na dashboard" – prikazuju se u "Novi moduli"
model DashboardHighlight {
  id          String   @id @default(cuid())
  moduleKey   String   @unique  // npr. "rules", "vacations", "PDS"
  moduleLabel String   // npr. "Pravila & Procedure"
  addedAt     DateTime @default(now())
  order       Int      @default(0)  // manji = više gore

  @@index([addedAt])
}

// --- FIRMEN & PARTNER (Dobavljači i servisi) ---
// Kategorije odjela – admin ih dodaje i mijenja (nije hardcodirano)
model PartnerCategoryModel {
  id        String          @id @default(cuid())
  name      String          // npr. "IT", "Haus Technik", "Ostalo"
  icon      String?         // ime Lucide ikone, npr. "Cpu", "Wrench"
  sortOrder Int             @default(0)
  companies PartnerCompany[]

  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@map("partner_category")
}

model PartnerCompany {
  id                 String                @id @default(cuid())
  categoryId         String?                // opcionalno dok se ne migriraju stari podaci
  category           PartnerCategoryModel? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  companyName        String
  logoUrl            String?               // logo / naslovnica firme (URL slike)
  serviceDescription String?               @db.Text
  notes              String?               @db.Text
  contacts           PartnerContact[]

  createdAt          DateTime              @default(now())
  updatedAt          DateTime              @updatedAt

  @@index([categoryId])
}


model PartnerContact {
  id               String         @id @default(cuid())
  partnerCompanyId String
  partnerCompany   PartnerCompany @relation(fields: [partnerCompanyId], references: [id], onDelete: Cascade)
  contactName      String
  phone            String?
  email            String?
  role             String?

  @@index([partnerCompanyId])
}

// --- BONUS TOOL MODELI ---

model BonusCycle {
  id          String            @id @default(cuid())
  name        String                                // npr. "2025 Godišnji Bonus"
  year        Int?
  description String?

  // Globalne postavke iz alata
  baseMonths  Float             @default(2)        // settings.baseMonths
  capPct      Int               @default(120)      // settings.capPct (0–120)
  factorMode  BonusFactorMode   @default(MULTIPLY) // settings.factorMode
  capFactor   Boolean           @default(true)     // settings.capFactor

  status      BonusCycleStatus  @default(DRAFT)
  isActive    Boolean           @default(false)    // brzi flag za "trenutni" ciklus

  // Relacije
  templates   BonusTemplate[]
  entries     BonusEntry[]

  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([year, status])
  @@index([isActive])
}

// Definicija stubova/pillara i ciljeva po "odjelu" (RL, Office, AL)
model BonusTemplate {
  id          String      @id @default(cuid())
  cycleId     String
  cycle       BonusCycle  @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  // Logički odjel iz Bonus alata (RL, AL, Office ...)
  deptKey     String

  // Pillar ključ: "fin", "ops", "ind"
  pillarKey   String
  pillarName  String

  // Težina stubova – čuva se kao 0–1 (npr. 0.5 = 50%)
  pillarWeight Float     @default(0.0)

  enabled     Boolean    @default(true)

  // Relacija na pojedinačne ciljeve (goals)
  goals       BonusGoal[]

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([cycleId, deptKey])
  @@index([cycleId, deptKey, pillarKey])
}

model BonusGoal {
  id          String         @id @default(cuid())
  templateId  String
  template    BonusTemplate  @relation(fields: [templateId], references: [id], onDelete: Cascade)

  name        String
  // Težina cilja u % (0–100), identično "w" iz HTML-a
  weightPct   Float          @default(0)

  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}

// Snapshot za svakog zaposlenika u datom ciklusu
model BonusEntry {
  id            String        @id @default(cuid())

  cycleId       String
  cycle         BonusCycle    @relation(fields: [cycleId], references: [id], onDelete: Cascade)

  userId        String
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Snapshot plate i postavki za taj ciklus (NE vezano za trenutni User profil)
  salaryMonthly Float         @default(0)      // Monatsgehalt
  baseMonths    Float         @default(0)      // može biti različito po korisniku

  // Pojedinačni faktori (kao u HTML state.factors)
  factorTenure  Float         @default(1.0)
  factorSize    Float         @default(1.0)
  factorOffice  Float         @default(1.0)

  // Fleksibilno polje za buduće faktore (npr. dodatni koeficijenti)
  factors       Json?         // { tenure, size, office, ... }

  // Izračunate ocjene (0–1.2) po stubu i ukupno
  scoreFin      Float         @default(0)
  scoreOps      Float         @default(0)
  scoreInd      Float         @default(0)
  scoreTotal    Float         @default(0)

  // Izračunata baza, limit i isplata
  amountBase    Float         @default(0)      // salary * baseMonths
  amountCap     Float         @default(0)      // base * capPct
  factorCombined Float        @default(1.0)    // rezultat factorFor(...)
  amountRaw     Float         @default(0)      // prije cap-a
  finalPayout   Float         @default(0)      // nakon cap-a (payout)

  // Snapshot ispunjenja ciljeva (fulfill.fin/ops/ind per-goal) za analitiku
  fulfillment   Json?         // { fin: number[], ops: number[], ind: number[] } ili detljaniji objekt

  isExcluded    Boolean       @default(false)  // npr. ako je zaposlenik izašao usred ciklusa

  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@unique([cycleId, userId])
  @@index([cycleId])
  @@index([userId])
}

// Snapshot kompletnog Bonus state objekta (preneseno direktno iz HTML alata)
model BonusSheet {
  id        String   @id @default(cuid())
  name      String   // npr. "Obračun 2026 Q1"
  data      Json     // kompletan 'state' objekat iz alata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
