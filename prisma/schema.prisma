generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")  // Pooled connection (za brzi rad aplikacije)
  directUrl = env("DIRECT_URL")    // Direct connection (OBAVEZNO za 'prisma db push')
}

// --- ENUMS ---
enum Role {
  SYSTEM_ARCHITECT
  SUPER_ADMIN
  ADMIN
  MANAGER
  CREW
}

enum PDSStatus {
  DRAFT
  IN_PROGRESS
  OPEN
  SUBMITTED
  RETURNED
  APPROVED
  COMPLETED
  ARCHIVED
}

// ENUMI ZA PRAVILA
enum RulePriority {
  INFORMATION
  MANDATORY
  URGENT
}

enum RuleStatus {
  ACTIVE
  ARCHIVED
  DRAFT
}

// --- DEPARTMENTS (Odjeli) ---
model Department {
  id           String   @id @default(cuid())
  name         String
  color        String   @default("#6b7280") // HEX npr. #ff0000
  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id], onDelete: SetNull)

  users        User[]

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([restaurantId])
}

// --- USERS & AUTH ---
model User {
  id                  String    @id @default(cuid())
  name                String?
  email               String?   @unique
  password            String?
  role                Role      @default(CREW)
  departmentId        String?
  department          Department? @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  isActive            Boolean   @default(true)
  image               String?
  lastSeen            DateTime? @default(now())
  permissions         String[]  @default([])
  vacationEntitlement Int       @default(20)
  vacationCarryover   Int       @default(0)

  // Nadređeni (self-relation)
  supervisorId        String?
  supervisor          User?     @relation("UserSupervisor", fields: [supervisorId], references: [id], onDelete: SetNull)
  subordinates        User[]    @relation("UserSupervisor")

  // Godišnji po godinama (VacationAllowance = dinamička lista godina)
  vacationAllowances  VacationAllowance[]

  restaurants         RestaurantUser[]
  evaluations         EvaluationSubmission[]
  vacations           VacationRequest[]      // zahtjevi koje je korisnik kreirao
  supervisedVacations VacationRequest[] @relation("VacationSupervisor") // ✅ NOVO: zahtjevi koji dolaze ovom korisniku na odobrenje

  pdsList             PDS[]
  accounts            Account[]
  sessions            Session[]

  // RELACIJE ZA PRAVILA
  readRules           RuleReadReceipt[]

  // ✅ NOVO: state snapshotovi za alate (Vercel Blob pointeri)
  toolStates          ToolState[]

  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model VacationAllowance {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  year      Int
  days      Int      @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, year])
  @@index([year])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// --- ROLE PERMISSION PRESETS ---
// Omogućava "preset" permisije po roli (npr. CREW), koje se automatski dodeljuju pri kreiranju korisnika.
// Admin može menjati ove preset-e kroz UI.
model RolePermissionPreset {
  id             String   @id @default(cuid())
  role           Role     @unique
  permissionKeys String[] @default([])

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// --- PDS ---
model PDSTemplate {
  id           String     @id @default(cuid())
  year         Int
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  goals        Json
  scale        Json
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([year, restaurantId])
}

model PDS {
  id                 String      @id @default(cuid())
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
  userId             String
  user               User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurantId       String?
  restaurant         Restaurant? @relation(fields: [restaurantId], references: [id])
  managerId          String
  year               Int
  templateId         String?
  goals              Json
  scale              Json
  employeeComment    String?     @db.Text
  managerComment     String?     @db.Text
  employeeSignature  String?     @db.Text
  managerSignature   String?     @db.Text
  totalScore         Int         @default(0)
  finalGrade         String?
  status             PDSStatus   @default(DRAFT)

  @@unique([userId, year])
}

// --- RESTAURANTS ---
model Restaurant {
  id                  String               @id @default(cuid())
  code                String               @unique
  name                String?
  city                String?
  address             String?
  isActive            Boolean              @default(true)
  openingHours        Json?                @default("{}")
  users               RestaurantUser[]
  departments         Department[]

  // Relacija na pravila
  rules               RuleRestaurant[]

  evaluations         EvaluationSubmission[]
  blockedDays         BlockedDay[]
  productivityReports ProductivityReport[]
  laborReports        LaborReport[]
  vacationRequests    VacationRequest[]
  pdsTemplates        PDSTemplate[]
  pdsList             PDS[]

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model RestaurantUser {
  id           String     @id @default(cuid())
  userId       String
  restaurantId String
  isPrimary    Boolean    @default(false)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([userId, restaurantId])
}

// --- TOOLS ---
model ProductivityReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  date         String
  data         Json       @default("{}")
  targetProd   Float?     @default(120)
  netCoeff     Float?     @default(1.17)
  hourlyData   Json?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([restaurantId, date])
}

model LaborPlan {
  id         String   @id @default(cuid())
  year       Int
  month      Int
  restaurant String
  data       Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([year, month, restaurant])
}

model LaborReport {
  id           String     @id @default(cuid())
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  month        Int
  year         Int
  daysData     Json
  hourlyWage   Float      @default(11.80)
  budgetSales  Float      @default(0)
  budgetCost   Float      @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([restaurantId, month, year])
}

model VacationRequest {
  id           String      @id @default(cuid())
  userId       String
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  // ✅ NOVO: kome ide odobrenje (snapshot nadređeni u momentu slanja)
  supervisorId String?
  supervisor   User?       @relation("VacationSupervisor", fields: [supervisorId], references: [id], onDelete: SetNull)

  restaurantId String?
  restaurant   Restaurant? @relation(fields: [restaurantId], references: [id])
  start        String
  end          String
  days         Int
  status       String      @default("PENDING")
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

model BlockedDay {
  id           String     @id @default(cuid())
  date         String
  reason       String?
  restaurantId String
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())
}

model EvaluationTemplate {
  id          String                 @id @default(cuid())
  title       String
  criteria    Json
  isActive    Boolean                @default(true)
  createdAt   DateTime               @default(now())
  submissions EvaluationSubmission[]
}

model EvaluationSubmission {
  id           String             @id @default(cuid())
  templateId   String
  template     EvaluationTemplate @relation(fields: [templateId], references: [id])
  restaurantId String
  restaurant   Restaurant         @relation(fields: [restaurantId], references: [id])
  userId       String
  user         User               @relation(fields: [userId], references: [id])
  answers      Json
  totalScore   Int
  createdAt    DateTime           @default(now())
}

// --- MODULE: PRAVILA (NOVO - CMS VERZIJA) ---

// 1. Kategorije
model RuleCategory {
  id        String   @id @default(cuid())
  name      String   @unique
  rules     Rule[]
  createdAt DateTime @default(now())
}

// 2. Slike (Galerija)
model RuleImage {
  id        String   @id @default(cuid())
  url       String
  ruleId    String
  rule      Rule     @relation(fields: [ruleId], references: [id], onDelete: Cascade)
}

// 3. Glavni Rule model
model Rule {
  id            String           @id @default(cuid())
  title         String
  content       String?          @db.Text

  // Relacija na kategoriju
  categoryId    String
  category      RuleCategory     @relation(fields: [categoryId], references: [id])

  priority      RulePriority     @default(INFORMATION)

  // Status: Aktivan/Neaktivan
  isActive      Boolean          @default(true)
  status        RuleStatus       @default(ACTIVE) // Zadržano radi kompatibilnosti

  // Media
  videoUrl      String?

  // OVO JE KLJUČNO: Niz stringova za podršku više PDF-ova
  pdfUrls       String[]         @default([])

  imageUrl      String?          // Opcionalno za thumbnail

  // Relacija na slike (One-to-Many)
  images        RuleImage[]

  // Vidljivost
  isGlobal      Boolean          @default(true)

  authorId      String

  // Relacije
  restaurants   RuleRestaurant[]
  readReceipts  RuleReadReceipt[]

  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt

  @@index([categoryId])
  @@index([isActive])
}

model RuleRestaurant {
  id           String     @id @default(cuid())
  ruleId       String
  restaurantId String
  rule         Rule       @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id], onDelete: Cascade)

  @@unique([ruleId, restaurantId])
}

model RuleReadReceipt {
  id        String   @id @default(cuid())
  ruleId    String
  rule      Rule     @relation(fields: [ruleId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  readAt    DateTime @default(now())

  @@unique([ruleId, userId])
}

//
// ✅ NOVO: TOOL STATE (Vercel Blob pointer per user + toolKey)
//
model ToolState {
  id        String   @id @default(cuid())
  toolKey   String
  blobUrl   String

  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([userId, toolKey])
  @@index([toolKey])
}
